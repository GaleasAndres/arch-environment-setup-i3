#!/bin/bash

# === DYNAMIC PATH TO REPO ROOT ===
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_CONFIG_DIR="$SCRIPT_DIR/config"
TARGET_CONFIG_DIR="$HOME/.config"

PACKAGES=(
  i3-wm
  i3status
  i3blocks
  i3lock
  picom
  kitty
  thunar
  dunst
  rofi
  zsh
  rofi-greenclip
  sddm
  ttf-jetbrains-mono-nerd
  ttf-hack-nerd
  zsh-autosuggestions
  zsh-syntax-highlighting
  lsd
  bat
  xclip
  fzf
  feh
)

CONFIG_FOLDERS=(
  i3
  picom
  kitty
  Thunar
  dunst
  rofi
)

# === INSTALL PACKAGES ===
echo "ðŸ”§ Installing required packages with yay..."
for pkg in "${PACKAGES[@]}"; do
  if ! pacman -Qi "$pkg" &> /dev/null; then
    echo "â†’ Installing $pkg..."
    yay -S --noconfirm "$pkg"
  else
    echo "âœ”ï¸ $pkg already installed."
  fi
done

# === ENABLE SDDM ===
if command -v systemctl &> /dev/null; then
  echo "ðŸ”Œ Enabling sddm.service..."
  sudo systemctl enable sddm.service
fi

# === INSTALL POWERLEVEL10K ===
echo "ðŸŽ¨ Installing Powerlevel10k theme..."
if [ ! -d "$TARGET_CONFIG_DIR/powerlevel10k" ]; then
  git clone --depth=1 https://github.com/romkatv/powerlevel10k.git "$TARGET_CONFIG_DIR/powerlevel10k"
else
  echo "âœ”ï¸ Powerlevel10k already installed."
fi

# === SETUP ZSH CONFIGURATION ===
echo "ðŸ“„ Setting up zsh configuration..."
cp -f "$REPO_CONFIG_DIR/zshrc-configuration" "$HOME/.zshrc"

# === COPY CONFIGS ===
echo "ðŸ“ Copying config folders into $TARGET_CONFIG_DIR..."

mkdir -p "$TARGET_CONFIG_DIR"

for folder in "${CONFIG_FOLDERS[@]}"; do
  SRC="$REPO_CONFIG_DIR/$folder"
  DST="$TARGET_CONFIG_DIR/$folder"

  if [ -d "$SRC" ]; then
    echo "â†’ Copying $folder..."
    rm -rf "$DST"
    cp -r "$SRC" "$DST"
  else
    echo "âš ï¸ Warning: $SRC not found. Skipping $folder"
  fi
done

echo "âœ… Setup complete! Your rice is hot and ready ðŸš"

# Prompt to start the display manager immediately
read -r -p "Do you want to start the environment now? [Y/n] " start_now
if [[ $start_now =~ ^[Yy]$ || $start_now =~ ^[Yy]es$ ]]; then
  if command -v systemctl &> /dev/null; then
    echo "ðŸš€ Starting sddm.service..."
    sudo systemctl start sddm.service
  fi
fi

